<div class="container-fluid">
  <!-- Header -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
      <i class="bi bi-pc-display text-primary"></i> Inventário de Hardware
    </h1>
  </div>

  <!-- Filtros -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <form method="GET" action="/hardware" class="row g-3">
        <div class="col-md-4">
          <label class="form-label">Unidade de Saúde (USF)</label>
          <select name="usfId" class="form-select">
            <option value="all" <%= filters.usfId === 'all' ? 'selected' : '' %>>Todas as USFs</option>
            <% usfs.forEach(usf => { %>
              <option value="<%= usf.id %>" <%= filters.usfId == usf.id ? 'selected' : '' %>>
                <%= usf.nome %>
              </option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-4">
          <label class="form-label">Número de Patrimônio</label>
          <input type="text" name="patrimonio" class="form-control" placeholder="Buscar por patrimônio..." value="<%= filters.patrimonio %>">
        </div>
        <div class="col-md-4 d-flex align-items-end">
          <button type="submit" class="btn btn-primary me-2">
            <i class="bi bi-search"></i> Filtrar
          </button>
          <a href="/hardware" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Limpar
          </a>
        </div>
      </form>
    </div>
  </div>

  <!-- Tabela de Hardware -->
  <div class="card shadow">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">
        <i class="bi bi-list-ul"></i> Equipamentos Cadastrados (<%= hardwares.length %>)
      </h6>
    </div>
    <div class="card-body">
      <% if (hardwares.length === 0) { %>
        <div class="alert alert-info">
          <i class="bi bi-info-circle"></i> Nenhum hardware encontrado com os filtros aplicados.
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table hardware-table">
            <thead>
              <tr>
                <th style="width: 110px;">Patrimônio</th>
                <th>USF / Sala</th>
                <th>Tipo</th>
                <th>Modelo</th>
                <th style="width: 110px;">AnyDesk</th>
                <th style="width: 100px;">Status</th>
                <th class="text-end" style="width: 120px;">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% hardwares.forEach(hw => { %>
                <tr>
                  <td><strong><%= hw.patrimonio %></strong></td>
                  <td>
                    <div><%= hw.usf.nome %></div>
                    <small class="text-muted">
                      <i class="bi <%= getRoomIcon(hw.sala) %>" style="font-size: 0.85rem;"></i>
                      <%= translateRoom(hw.sala) %>
                    </small>
                  </td>
                  <td><%= hw.tipo %></td>
                  <td><%= hw.modelo || '-' %></td>
                  <td>
                    <% if (hw.anydesk) { %>
                      <code class="hardware-anydesk"><%= hw.anydesk %></code>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                  <td>
                    <span class="badge <%= getStatusBadgeClass(hw.status) %>">
                      <%= translateHardwareStatus(hw.status) %>
                    </span>
                  </td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <button class="btn btn-info btn-xs" onclick="openEditModal(<%= JSON.stringify(hw) %>)" title="Editar">
                        <i class="bi bi-pencil" style="font-size: 0.8rem;"></i>
                      </button>
                      <button class="btn btn-warning btn-xs" onclick="openMoveModal(<%= hw.id %>, '<%= hw.patrimonio %>', <%= JSON.stringify(usfs) %>)" title="Mover">
                        <i class="bi bi-arrow-left-right" style="font-size: 0.8rem;"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Modal Editar Hardware (TECH - apenas AnyDesk e Status) -->
<div class="modal fade" id="modalEdit" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="POST" id="formEdit">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-pencil"></i> Editar Hardware</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="editModalBody">
          <!-- Conteúdo será preenchido via JS -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Atualizar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Mover Hardware -->
<div class="modal fade" id="modalMove" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="POST" id="formMove">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-arrow-left-right"></i> Mover Hardware</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Mover equipamento <strong id="movePatrimonio"></strong> para:</p>
          <div class="mb-3">
            <label class="form-label">Nova USF</label>
            <select name="usfId" class="form-select" id="moveUsfSelect" required>
              <option value="">Selecione...</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-warning">Mover</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
// Helper functions for modals
function openEditModal(hw) {
  const form = document.getElementById('formEdit');
  form.action = `/hardware/${hw.id}/update`;
  
  const body = document.getElementById('editModalBody');
  body.innerHTML = `
    <div class="alert alert-info">
      <i class="bi bi-info-circle"></i> Como técnico, você pode editar apenas o <strong>AnyDesk</strong> e o <strong>Status</strong>.
    </div>
    
    <div class="mb-3">
      <label class="form-label">Patrimônio</label>
      <input type="text" class="form-control" value="${hw.patrimonio}" disabled>
    </div>
    <div class="mb-3">
      <label class="form-label">USF</label>
      <input type="text" class="form-control" value="${hw.usf.nome}" disabled>
    </div>
    <div class="mb-3">
      <label class="form-label">Tipo</label>
      <input type="text" class="form-control" value="${hw.tipo}" disabled>
    </div>
    <div class="mb-3">
      <label class="form-label">Modelo</label>
      <input type="text" class="form-control" value="${hw.modelo || '-'}" disabled>
    </div>
    
    <hr>
    
    <div class="mb-3">
      <label class="form-label">AnyDesk</label>
      <input type="text" name="anydesk" class="form-control" value="${hw.anydesk || ''}" placeholder="Digite o código AnyDesk">
    </div>
    <div class="mb-3">
      <label class="form-label">Status</label>
      <select name="status" class="form-select">
        <option value="ATIVO" ${hw.status === 'ATIVO' ? 'selected' : ''}>Ativo</option>
        <option value="MANUTENCAO" ${hw.status === 'MANUTENCAO' ? 'selected' : ''}>Manutenção</option>
        <option value="PERCA_TOTAL" ${hw.status === 'PERCA_TOTAL' ? 'selected' : ''}>Perca Total</option>
      </select>
    </div>
  `;
  
  new bootstrap.Modal(document.getElementById('modalEdit')).show();
}

function openMoveModal(id, patrimonio, usfs) {
  const form = document.getElementById('formMove');
  form.action = `/hardware/${id}/move`;
  
  document.getElementById('movePatrimonio').textContent = patrimonio;
  
  const select = document.getElementById('moveUsfSelect');
  select.innerHTML = '<option value="">Selecione...</option>' + 
    usfs.map(usf => `<option value="${usf.id}">${usf.nome}</option>`).join('');
  
  new bootstrap.Modal(document.getElementById('modalMove')).show();
}

function getRoomIcon(room) {
  const icons = {
    'RECEPCAO': 'bi-door-open',
    'ENFERMAGEM': 'bi-heart-pulse',
    'MEDICO': 'bi-hospital',
    'REUNIAO': 'bi-people',
    'VACINA': 'bi-shield-plus',
    'TRIAGEM': 'bi-clipboard2-pulse'
  };
  return icons[room] || 'bi-geo-alt';
}

function translateRoom(room) {
  const translations = {
    'RECEPCAO': 'Recepção',
    'ENFERMAGEM': 'Enfermagem',
    'MEDICO': 'Médico',
    'REUNIAO': 'Reunião',
    'VACINA': 'Vacina',
    'TRIAGEM': 'Triagem'
  };
  return translations[room] || room;
}

function getStatusBadgeClass(status) {
  const classes = {
    'ATIVO': 'bg-success',
    'MANUTENCAO': 'bg-warning text-dark',
    'PERCA_TOTAL': 'bg-danger'
  };
  return classes[status] || 'bg-secondary';
}

function translateStatus(status) {
  const translations = {
    'ATIVO': 'Ativo',
    'MANUTENCAO': 'Manutenção',
    'PERCA_TOTAL': 'Perca Total'
  };
  return translations[status] || status;
}
</script>

<style>
.hardware-anydesk {
  background-color: #f0f0f0;
  padding: 0.15rem 0.4rem;
  border-radius: 3px;
  font-family: 'Courier New', monospace;
  font-size: 0.75rem;
  color: #2563eb;
  font-weight: 600;
  white-space: nowrap;
  display: inline-block;
}

.hardware-room-icon {
  color: #4e73df;
  margin-right: 0.25rem;
}

.hardware-table tbody tr {
  transition: all 0.2s;
}

.hardware-table tbody tr:hover {
  background-color: rgba(78, 115, 223, 0.05);
}

.btn-xs {
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  line-height: 1.3;
  border-radius: 0.2rem;
}
</style>
