<h1 class="h3 mb-4 text-gray-800">
  <i class="bi bi-building text-primary"></i> Gerenciar Unidades de Saúde
</h1>

<!-- Formulário de Nova USF -->
<div class="card shadow mb-4">
  <div class="card-header py-3 bg-gradient-primary">
    <h6 class="m-0 font-weight-bold text-white">
      <i class="bi bi-plus-circle"></i> Nova Unidade
    </h6>
  </div>
  <div class="card-body">
    <form method="post" action="/admin/usfs">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      
      <div class="row align-items-end">
        <div class="col-md-9 mb-3">
          <label for="usfName" class="form-label fw-semibold">Nome da Unidade</label>
          <input type="text" class="form-control" id="usfName" name="nome" required 
                 placeholder="Ex: USF Central, USF Vila Nova, etc.">
        </div>
        
        <div class="col-md-3 mb-3">
          <button class="btn btn-primary w-100" type="submit">
            <i class="bi bi-check-circle"></i> Cadastrar
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Lista de USFs -->
<div class="card shadow">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">
      <i class="bi bi-list-ul"></i> Unidades Cadastradas
    </h6>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th class="ps-4" width="80">ID</th>
            <th>Nome da Unidade</th>
            <th width="150">Rede</th>
            <th class="text-end pe-4" width="100">Usuários</th>
          </tr>
        </thead>
        <tbody>
          <% if (usfs.length === 0) { %>
            <tr>
              <td colspan="4" class="text-center py-5 text-muted">
                <i class="bi bi-building fs-1 d-block mb-2"></i>
                Nenhuma unidade cadastrada ainda.
              </td>
            </tr>
          <% } else { %>
            <% usfs.forEach(u => { %>
              <tr>
                <td class="ps-4">
                  <span class="badge bg-light text-dark border">#<%= u.id %></span>
                </td>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-building text-primary"></i>
                    </div>
                    <div>
                      <div class="fw-semibold"><%= u.nome %></div>
                      <% if (u.provedorInternet) { %>
                        <small class="text-muted">
                          <i class="bi bi-wifi"></i> <%= u.provedorInternet %>
                        </small>
                      <% } %>
                    </div>
                  </div>
                </td>
                <td>
                  <% if (u.ipOnt || u.modeloSwitch) { %>
                    <div class="small">
                      <% if (u.ipOnt) { %>
                        <div><i class="bi bi-router text-muted"></i> <%= u.ipOnt %></div>
                      <% } %>
                      <% if (u.modeloSwitch) { %>
                        <div><i class="bi bi-hdd-network text-muted"></i> <%= u.modeloSwitch %></div>
                      <% } %>
                    </div>
                  <% } else { %>
                    <span class="text-muted small">-</span>
                  <% } %>
                </td>
                <td class="text-end pe-4">
                  <span class="badge bg-info">
                    <i class="bi bi-people"></i> <%= u._count?.users || 0 %>
                  </span>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
.avatar-sm {
  width: 40px;
  height: 40px;
}
</style>
