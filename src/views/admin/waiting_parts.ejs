<h1 class="h3 mb-4 text-gray-800">
  <i class="bi bi-hourglass-split text-warning"></i> Aguardando Peças
</h1>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-warning">
      Chamados Aguardando Reposição de Peças
    </h6>
  </div>
  <div class="card-body">
    <% if (tickets.length === 0) { %>
      <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Nenhum chamado aguardando peças no momento.
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>USF</th>
              <th>Categoria</th>
              <th>Solicitante</th>
              <th>Técnico</th>
              <th>Última Atualização</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% tickets.forEach(t => { %>
              <tr>
                <td><strong>#<%= t.id %></strong></td>
                <td><%= t.usf ? t.usf.nome : 'N/A' %></td>
                <td><%= t.category ? t.category.nome : 'N/A' %></td>
                <td><%= t.requester ? t.requester.nome : 'N/A' %></td>
                <td>
                  <% if (t.assignee) { %>
                    <span class="badge bg-info"><%= t.assignee.nome %></span>
                  <% } else { %>
                    <span class="text-muted">Não atribuído</span>
                  <% } %>
                </td>
                <td><%= fmtDateBR(t.updatedAt) %></td>
                <td>
                  <a href="/tech/tickets/<%= t.id %>" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> Ver
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      
      <div class="mt-3">
        <p class="text-muted small">
          <i class="bi bi-info-circle"></i> 
          Total de chamados aguardando peças: <strong><%= tickets.length %></strong>
        </p>
      </div>
    <% } %>
  </div>
</div>
